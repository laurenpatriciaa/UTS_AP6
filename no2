#include <iostream>
using namespace std;
int main() 
{
    int a, b = 0, c;
    cout << "Masukkan angka: ";
    cin >> a;
    
    if (a < 0) 
    {
        cout << "Angka tidak valid. Angka berupa negatif." << endl;
    }
    while (a != 0) 
    {
        c = a % 10;
        b += c;
        a /= 10;
    }
    cout << "Hasil penjumlahan" << " : " << b << endl;

   
}
